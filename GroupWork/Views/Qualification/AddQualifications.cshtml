@model GroupWork.Models.EmployeeModel
<h1 class="text-center mb-6 mt-2">Add Qualifications Details</h1>
<form asp-controller="Qualification" asp-action="Add" method="post">
    <div class="form-group row mb-3">
        <label for="EmpId" class="col-sm-2 col-form-label">Employee ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="EmpId" name="EmpId" value="@Model.Id" readonly>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpDegreeName" class="col-sm-2 col-form-label">Degree Name:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="EmpDegreeName" name="EmpDegreeName" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpStartYear" class="col-sm-2 col-form-label">Start Year:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="EmpStartYear" name="EmpStartYear" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpEndYear" class="col-sm-2 col-form-label">End Year:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="EmpEndYear" name="EmpEndYear" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpInstituteName" class="col-sm-2 col-form-label">Institute Name:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="EmpInstituteName" name="EmpInstituteName" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpInstituteCountryId" class="col-sm-2 col-form-label">Country ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="EmpInstituteCountryId" name="EmpInstituteCountryId" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpInstituteCityId" class="col-sm-2 col-form-label">City ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="EmpInstituteCityId" name="EmpInstituteCityId" required>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="EmpObtaineGPAPercentage" class="col-sm-2 col-form-label">GPA Percentage:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="EmpObtaineGPAPercentage" name="EmpObtaineGPAPercentage" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpQuilficationTypeId" class="col-sm-2 col-form-label">Qualification ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="EmpQuilficationTypeId" name="EmpQuilficationTypeId" required>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="EmpDescription" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="EmpDescription" name="EmpDescription" required>
        </div>
    </div>


    <div class="form-group row mb-3">
        <label for="CompanyId" class="col-sm-2 col-form-label">Company ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="CompanyId" name="CompanyId" value="@Model.CompanyId" readonly>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="BranchId" class="col-sm-2 col-form-label">Branch ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="BranchId" name="BranchId" value="@Model.BranchId" readonly>
        </div>
    </div>
    <div class="form-group row mb-3 mt-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <button type="submit" class="btn btn-dark">Add Qualifications</button>
        </div>
    </div>
</form>
<style>
    .custom-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 2px 4px rgba(0, 0, 255, 0.2);
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .custom-input:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
</style>
