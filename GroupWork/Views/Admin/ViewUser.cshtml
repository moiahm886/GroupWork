@model GroupWork.Models.UserModel
<div class="container mt-5">
    <h1 class="text-center mb-3">View User Details</h1>
    <div class="ml-4">
        <form id="deleteForm" method="post" asp-controller="Admin" asp-action="DeleteUser">
            <div class="mb-3">
                <label for="UserName" class="form-label">ID</label>
                <input type="text" class="form-control" name="Id" id="UserName" value="@Model.Id" readonly />
            </div>
            <div class="mb-3">
                <label for="UserName" class="form-label">User Name</label>
                <input type="text" class="form-control" name="UserName" id="UserName" value="@Model.UserName" readonly />
            </div>
            <div class="mb-3">
                <label for="UserPassword" class="form-label">User Password</label>
                <input type="text" class="form-control" name="UserPassword" id="UserPassword" value="@Model.UserPassword" />
            </div>
            <div class="form-group row mb-3">
                <label for="IsActive" class="col-sm-2 col-form-label">Is Active:</label>
                <div class="col-sm-5">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" value="1">
                        <label class="form-check-label" for="IsActive">Toggle to activate/deactivate</label>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="EmpId" class="form-label">Employee Id</label>
                <input type="number" class="form-control" name="EmpId" id="EmpId" value="@Model.EmpId" readonly />
            </div>
            <div class="mb-3">
                <label for="RoleId" class="form-label">Role Id</label>
                <input type="number" class="form-control" name="RoleID" id="RoleId" value="@Model.RoleId" />
            </div>
            <div class="mb-3">
                <label for="CompanyId" class="form-label">Company Id</label>
                <input type="number" class="form-control" name="CompanyID" id="CompanyId" value="@Model.CompanyId" />
            </div>
            <div class="mb-3">
                <label for="BranchId" class="form-label">Branch Id</label>
                <input type="number" class="form-control" name="BranchID" id="BranchId" value="@Model.BranchId" />
            </div>
            <div class="mb-3">
                <label for="AddedBy" class="form-label">Added by</label>
                <input type="number" class="form-control" name="AddedBy" id="AddedBy" value="@Model.AddedBy" readonly />
            </div>
            <div class="mb-3">
                <label for="AddedDate" class="form-label">Added Date</label>
                <input type="datetime" class="form-control" name="AddedDate" id="AddedDate" value="@((Model.AddedDate != DateTime.MinValue) ? Model.AddedDate.ToString("yyyy-MM-dd HH:mm:ss") : "N/A")" readonly />
            </div>


            <div class="mb-3">
                <label for="UpdatedBy" class="form-label">Updated By</label>
                <input type="number" class="form-control" name="UpdatedBy" id="UpdatedBy" value="@Model.UpdatedBy" />
            </div>
            <div class="mb-3">
                <label for="UpdatedDate" class="form-label">Updated Date</label>
                <input type="datetime" class="form-control" name="UpdatedDate" id="UpdatedDate" value="@((Model.UpdatedDate != null) ? Model.UpdatedDate.Value.ToString("yyyy-MM-dd HH:mm:ss") : "N/A")" readonly />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-secondary" asp-controller="Admin" asp-action="UpdateUser">Update</button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
            </div>
            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-secondary mt-4">Back to User List</a>
        </form>
    </div>
</div>
<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this user?")) {
            document.getElementById('deleteForm').submit();
        }
    }
</script>
<style>
    input[type="checkbox"] {
        position: relative;
        width: 40px;
        height: 20px;
        -webkit-appearance: none;
        appearance: none;
        background: orange;
        outline: none;
        border-radius: 0.85rem;
        cursor: pointer;
        box-shadow: inset 0 0 5px rgb(0 0 0 / 50%);
    }

        input[type="checkbox"]::before {
            content: "";
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: #fff;
            position: absolute;
            top: 0;
            left: 0;
            transition: 0.5s;
        }

        input[type="checkbox"]:checked::before {
            transform: translateX(100%);
            background: #fff;
        }

        input[type="checkbox"]:checked {
            background: #00ed64;
        }

    .sliding-checkbox {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    .custom-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 2px 4px rgba(0, 0, 255, 0.2);
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .custom-input:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
</style>