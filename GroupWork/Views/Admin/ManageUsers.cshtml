@model List<GroupWork.Models.UserModel>
<style>
    table {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
        max-width: 600px; /* Adjust the maximum width as needed */
        margin: 0 auto;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
    }

    thead {
        background-color: #f0f0f0;
    }

    th {
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f5f5f5;
    }

    tr:hover {
        background-color: #e0e0e0;
    }

</style>
<h1 class="mt-4 mb-3 text-center">Manage User</h1>
<div class="d-flex justify-content-end mb-3">
    <form asp-controller="Admin" asp-action="AddUsers">
    <button class="mt-3 btn btn-dark">Add User</button>
    </form>
</div>
<div class="table-container">
<table class="table">
    <thead>
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th>Is Active</th>
            <th>Employee ID</th>
            <th>Role Id</th>
            <th>Company Id</th>
            <th>Branch Id</th>
            <th>Added by</th>
            <th>Added Date</th>
            <th>Updated By</th>
            <th>Updated Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@(user.IsActive == 1 ? "Active" : "Inactive")</td>
                <td>@(user.EmpId != null ? user.EmpId.ToString() : "N/A")</td>
                <td>@(user.RoleId.HasValue ? user.RoleId.Value.ToString() : "N/A")</td>
                <td>@(user.CompanyId.HasValue ? user.CompanyId.Value.ToString() : "N/A")</td>
                <td>@(user.BranchId.HasValue ? user.BranchId.Value.ToString() : "N/A")</td>
                <td>@user.AddedBy</td>
                <td>@(user.AddedDate != DateTime.MinValue ? user.AddedDate.ToString("dd-MMM-yyyy") : "N/A")</td>
                <td>@(user.UpdatedBy.HasValue ? user.UpdatedBy.Value.ToString() : "N/A")</td>
                <td>@(user.UpdatedDate != null ? user.UpdatedDate.Value.ToString("dd-MMM-yyyy") : "N/A")</td>
                <td><a href="ViewUser/@user.Id" class="btn btn-dark">View</a></td>
            </tr>
        }
    </tbody>
</table>
</div>
<style>
.table-container {
    width: 100%;
    overflow-x: auto;
}
</style>