@{
    var check = ViewData["Added"] as string;
}
<style>
    table {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
        max-width: 600px; 
        margin: 0 auto;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
    th, td {
        padding: 12px 15px;
        text-align: center;
    }
    thead {
        background-color: #f0f0f0;
    }
    th {
        font-weight: bold;
    }
    tr:nth-child(even) {
        background-color: #f5f5f5;
    }

    tr:hover {
        background-color: #e0e0e0;
    }
</style>
<h1 class="text-center">Manage Branch</h1>
@if (check == "Done")
{
    <script>
   Swal.fire("successfully added");
   </script>
}
<form id="deleteForm" style="overflow:auto" asp-controller="Admin" asp-action="DeleteBranch">
    <table class="table" style="border: 1px solid #F5F5DC; border-collapse: collapse; width: 100%;">
        <thead>
            <tr style="border-bottom: 1px solid #F5F5DC;">
                <th style="border: 1px solid #F5F5DC;">ID</th>
                <th style="border: 1px solid #F5F5DC;">Company ID</th>
                <th style="border: 1px solid #F5F5DC;">Name</th>
                <th style="border: 1px solid #F5F5DC;">City ID</th>
                <th style="border: 1px solid #F5F5DC;">Country ID</th>
                <th style="border: 1px solid #F5F5DC;">Address</th>
                <th style="border: 1px solid #F5F5DC;">Phone</th>
                <th style="border: 1px solid #F5F5DC;">Added By</th>
                <th style="border: 1px solid #F5F5DC;">Added Date</th>
                <th style="border: 1px solid #F5F5DC;">Updated By</th>
                <th style="border: 1px solid #F5F5DC;">Updated Date</th>
                <th style="border: 1px solid #F5F5DC;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in Model)
            {
                <tr>
                    <td style="border: 1px solid #F5F5DC;">@branch.Id</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.CompanyId</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.Name</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.CityId</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.CountryId</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.Address</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.Phone</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.AddedBy</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.AddedDate</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.UpdatedBy</td>
                    <td style="border: 1px solid #F5F5DC;">@branch.UpdatedDate</td>
                    <td style="border: 1px solid #F5F5DC;">
                            <input type="hidden" name="Id" value="@branch.Id" />
                        <button type="submit" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this Branch?")) {
            document.getElementById('deleteForm').submit();
        }
    }
</script>

