@model GroupWork.Models.EmployeeModel
<h1 class="text-center mb-6 mt-2">Add Social Media Details</h1>
<form asp-controller="SocialMedia" asp-action="Add" method="post">
    <div class="form-group row mb-3">
        <label for="EmpId" class="col-sm-2 col-form-label">Employee ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="EmpId" name="EmpId" value="@Model.Id" readonly>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="FacebookLink" class="col-sm-2 col-form-label">Facebook Link:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="FacebookLink" name="FacebookLink" maxlength="50">
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="TwitterLink" class="col-sm-2 col-form-label">Twitter Link:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="TwitterLink" name="TwitterLink" maxlength="50">
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="InstagramLink" class="col-sm-2 col-form-label">Instagram Link:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="InstagramLink" name="InstagramLink" maxlength="50">
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="LinkedinLink" class="col-sm-2 col-form-label">Linkedin Link:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="LinkedinLink" name="LinkedinLink" maxlength="50">
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="WebsiteLink" class="col-sm-2 col-form-label">Website Link:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="WebsiteLink" name="WebsiteLink" maxlength="50">
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="OtherLink" class="col-sm-2 col-form-label">Other Link:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="OtherLink" name="OtherLink" maxlength="50">
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="CompanyId" class="col-sm-2 col-form-label">Company ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="CompanyId" name="CompanyId" value="@Model.CompanyId" readonly>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="BranchId" class="col-sm-2 col-form-label">Branch ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="BranchId" name="BranchId" value="@Model.BranchId" readonly>
        </div>
    </div>
    <div class="form-group row mb-3 mt-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <button type="submit" class="btn btn-dark">Add Social Links</button>
        </div>
    </div>
</form>
<style>
    .custom-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 2px 4px rgba(0, 0, 255, 0.2);
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .custom-input:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
</style>
