@model GroupWork.Models.ExperienceModel
@{
    var Update = ViewData["Update"] as string;
    var Delete = ViewData["Delete"] as string;
}
<h1 class="text-center mb-4">View Experience</h1>
<form asp-controller="Employee" asp-action="DeleteExperience">
    <div class="form-group row mb-3">
        <label for="EmpJobTitle" class="col-sm-2 col-form-label">Job Title:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="EmpJobTitle" name="EmpJobTitle" value="@Model.EmpJobTitle" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpPostionId" class="col-sm-2 col-form-label">Company Name:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="EmpCompanyName" name="EmpCompanyName" value="@Model.EmpCompanyName" readonly>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpPostionId" class="col-sm-2 col-form-label">Position Id:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="EmpPostionId" name="EmpPostionId" value="@Model.EmpPostionId" required>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="EmpCountryId" class="col-sm-2 col-form-label">Country Id:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="EmpCountryId" name="EmpCountryId" value="@Model.EmpCountryId" readonly>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpWorkStartDate" class="col-sm-2 col-form-label">Work Start Date:</label>
        <div class="col-sm-5">
            <input type="date" class="form-control custom-input" id="EmpWorkStartDate" name="EmpWorkStartDate" value="@Model.EmpWorkStartDate.ToString("yyyy-MM-dd")" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="EmpWorkEndDate" class="col-sm-2 col-form-label">Work End Date:</label>
        <div class="col-sm-5">
            <input type="date" class="form-control custom-input" id="EmpWorkEndDate" name="EmpWorkEndDate" value="@Model.EmpWorkEndDate.ToString("yyyy-MM-dd")" required>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="EmpResponsibilities" class="col-sm-2 col-form-label">Responsibilities:</label>
        <div class="col-sm-5">
            <input type="text" class="form-control custom-input" id="EmpResponsibilities" name="EmpResponsibilities" value="@Model.EmpResponsibilities" required>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="CompanyId" class="col-sm-2 col-form-label">Company ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="CompanyId" name="CompanyId" value="@Model.CompanyId" readonly>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="BranchId" class="col-sm-2 col-form-label">Branch ID:</label>
        <div class="col-sm-5">
            <input type="number" class="form-control custom-input" id="BranchId" name="BranchId" value="@Model.BranchId" readonly>
        </div>
    </div>
    <div class="mt-4 ml-5">
        @if (Update != "Allow")
        {
           
            <button type="submit" class="btn btn-secondary" asp-controller="Employee" asp-action="UpdateEmployee" disabled>Update</button>
        }
        else
        {
            <input type="hidden" name="EmpId" value="@Model.EmpId">
            <button type="submit" class="btn btn-secondary" asp-controller="Employee" asp-action="UpdateExperience" asp-route-Id="@Model.Id">Update</button>
        }
        @if (Delete != "Allow")
        {
            <button type="button" class="btn btn-danger" onclick="confirmDelete()" disabled>Delete</button>
        }
        else
        {
            <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
        }
    </div>

</form>
<style>
    .custom-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 2px 4px rgba(0, 0, 255, 0.2);
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .custom-input:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
</style>